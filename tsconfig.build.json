{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolvePackageJsonExports": true,
    "lib": ["DOM", "ES2020"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "esbuild.mjs", "src/**/*.stories.tsx"]
}
